/**
 * Implements hook_help().
 */
function cgk_elastic_api_help($route_name) {
  switch ($route_name) {
    // Main module help for the cgk_elastic_api module.
    case 'help.page.cgk_elastic_api':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('cgk_elastic_api search functionality') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook__theme_suggestions_HOOK().
 */
function cgk_elastic_api_theme_suggestions_cgk_elastic_api_search(array $variables) {
  $suggestions = [];
  $suggestions[] = 'cgk_elastic_api_search__' . str_replace('.', '_', Drupal::routeMatch()
      ->getRouteName());
  return $suggestions;
}

